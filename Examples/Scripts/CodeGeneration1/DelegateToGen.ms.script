 TtfwWord FUNCTION .FindMemberRecur
   STRING IN aName
   TtfwWord IN aGen

  TtfwKeyWord VAR l_Member
  aName aGen pop:Word:FindMember >>> l_Member

  if ( l_Member IsNil ) then
   ( nil >>> Result )
  else
   ( l_Member pop:KeyWord:Word >>> Result )

  if ( Result IsNil ) then
   ( 
    aGen .Inherited.Words .for> ( 
     IN anItem 
     BOOLEAN VAR l_WasNil
     Result IsNil >>> l_WasNil
     TtfwWord VAR l_Found 
     aName anItem call.me >>> l_Found
     NOT ( l_WasNil OR ( ( l_Found IsNil ) ) ) ?FAIL [ 'Множественное наследование не поддерживается. Слово: ' aName ' генератор ' aGen pop:Word:Name ]
     l_Found >>> Result
    ) 
   )

 ; // .FindMemberRecur

 TtfwWord VAR g_Gen

 : .?
   ^ IN aWord

  TtfwWord VAR l_Word
 
  aWord |N g_Gen .FindMemberRecur >>> l_Word
 
  if ( l_Word IsNil ) then
   ( aWord DO )
  else
   ( l_Word DO )
 ; // .?

