// Testing.ms.script

USES
 Testing.ms.dict
 params.ms.dict
 string.ms.dict
;

Test TestingTest

CONST cTests 'Tests:'

MACRO Tests
 Literal IN aName
 [
   'VOID axiom:operator'
   cTests aName |N Cat
 ] Ctx:Parser:PushArray
; // Tests

Tests (+)?
 Test T1 '' (+)? 'B' Print ;
 Test T2 'A' (+)? 'B' Print ;
 Test T3 'A' (+)? '' Print ;
 Test T4 'A' (+)? 'D' Print ;
 Test T5 'A' (+)? '123' Print ;
; // Tests (+)?

MACRO RunTests
 Literal IN aName
 STRING VAR l_Name
 cTests aName |N Cat >>> l_Name
 [
  '@'
  l_Name
  'MembersIterator'
  '==>'
  '('
  'IN anItem'
  'anItem |N Print'
  'anItem DO'
  ')' 
 ] Ctx:Parser:PushArray 
; // RunTests

RunTests (+)?

WHILE ( StackLevel > 0 ) .

USES
 CodeDump.ms.dict
;

@SELF DumpElement

; // TestingTest

TestingTest