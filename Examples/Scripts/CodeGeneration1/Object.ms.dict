   NameOf %METHODS g_CurrentClassMethods ListToNameAsString

   NameOf %CLASS-METHODS g_CurrentMetaClassMethods ListToNameAsString

   NameOf %CONSTRUCTORS g_CurrentClassConstructors ListToNameAsString

  'end.'
 ] Ctx:Parser:PushArray
; // RunCompileProps&Methods

PROCEDURE DefineInstanceSize
 %SUMMARY 'Определяем размер экземпляров класса' ;
 if ( g_InstanceSizeDefined ! ) then
 begin
  g_InstanceSizeDefined := true
  g_CurrentClassImplWord %% InstanceSizeName DO =0 ?ASSURE [ 'Размер класса ' g_CurrentClass ' почему-то уже определён' ]
  g_ClassFieldOffset g_CurrentClassImplWord %% InstanceSizeName pop:Word:SetValue
 end // g_InstanceSizeDefined !
; // DefineInstanceSize

